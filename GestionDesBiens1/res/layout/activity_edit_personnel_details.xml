<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.android.gestiondesbiens.EditPersonnelDetails" >

     <EditText
        android:id="@+id/txtPersonnelName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textViewPersonnel"
        android:layout_toRightOf="@+id/textViewPersonnel"
        android:ems="10" />

    <Button
        android:id="@+id/btnSavePersonnel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textViewPersonnel"
        android:layout_below="@+id/txtPersonnelName"
        android:layout_marginTop="50dp"
        android:onClick="btnSavePersonnel_Click"
        android:text="Save" />

    <Button
        android:id="@+id/btnDeletePersonnel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnSavePersonnel"
        android:layout_below="@+id/btnSavePersonnel"
        android:onClick="btnDeletePersonnel_Click"
        android:text="Delete" />

    <TextView
        android:id="@+id/textViewPersonnel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="24dp"
        android:text="Personnel name"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    

</RelativeLayout>
