<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.android.gestiondesbiens.PersonnelActivity" >

   <ListView
        android:id="@+id/lstPersonnelHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@android:color/darker_gray" >
    </ListView>

    <ListView
        android:id="@+id/lstPersonnelDetails"
        android:layout_width="match_parent"
        android:layout_below="@+id/lstPersonnelHeader"
        android:layout_height="wrap_content">
    </ListView>
        
      <Button
        android:id="@+id/btnNewPersonnel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="29dp"
        android:onClick="btnNewPersonnel_Click"
        android:text="New" />
   
     
   <Button
        android:id="@+id/btnSavePersonnel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/btnNewPersonnel"
        android:layout_marginLeft="20dp"
        android:onClick="btnSavePersonnel_Click"
        android:text="Save" />
   
   <Button
        android:id="@+id/btnDeletePersonnel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/btnSavePersonnel"
        android:layout_marginLeft="20dp"
        android:onClick="btnDeletePersonnel_Click"
        android:text="Delete" />
   
   <TextView
       android:id="@+id/textViewPersonnel"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_above="@+id/btnNewPersonnel"
       android:layout_marginBottom="20dp"
       android:text="Personnel name"
       android:textAppearance="?android:attr/textAppearanceLarge" />
       
  <EditText
        android:id="@+id/txtPersonnelName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textViewPersonnel"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/textViewPersonnel"
        android:ems="10" >

        <requestFocus />
    </EditText>
    
    

</RelativeLayout>
