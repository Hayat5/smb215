<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.android.gestiondesbiens.TypeActivity" >

   <ListView
        android:id="@+id/lstTypeHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@android:color/darker_gray" >
    </ListView>

    <ListView
        android:id="@+id/lstTypeDetails"
        android:layout_width="match_parent"
        android:layout_below="@+id/lstTypeHeader"
        android:layout_height="wrap_content">
    </ListView>

    <Button
        android:id="@+id/btnNewType"
      android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="29dp"
        android:onClick="btnNewType_Click"
        android:text="New" />
   
    <Button
        android:id="@+id/btnSaveType"
   android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/btnNewType"
        android:layout_marginLeft="20dp"
        android:onClick="btnSaveType_Click"
        android:text="Save" />
   

   <Button
        android:id="@+id/btnDeleteType"
      android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/btnSaveType"
        android:layout_marginLeft="20dp"
        android:onClick="btnDeleteType_Click"
        android:text="Delete" />
   
   <TextView
        android:id="@+id/textViewType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnNewType"

        android:layout_marginBottom="44dp"
        android:text="Type name"
        android:textAppearance="?android:attr/textAppearanceLarge" />
       
  <EditText
        android:id="@+id/txtTypeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textViewType"
        android:layout_marginLeft="44dp"
        android:layout_toRightOf="@+id/textViewType"
        android:ems="10" >

        <requestFocus />
    </EditText>
    
    
</RelativeLayout>
