<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.android.gestiondesbiens.EditTransportDetails" >
    
    <TextView
        android:id="@+id/textViewPersonnelTransport"
      android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="24dp"
        android:text="Personnel ID"
        android:textAppearance="?android:attr/textAppearanceLarge" />

      <Spinner
          android:id="@+id/spinPersonnelTransport"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_alignLeft="@+id/textViewPersonnelTransport"
          android:layout_below="@+id/textViewPersonnelTransport"
          android:textAppearance="?android:attr/textAppearanceLarge" />

      <Button
          android:id="@+id/btnSaveTransport"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_alignLeft="@+id/spinPersonnelTransport"
          android:layout_below="@+id/spinPersonnelTransport"
          android:layout_marginTop="19dp"
          android:onClick="btnSaveTransport_Click"
          android:text="Save" />

      <Button
          android:id="@+id/btnDeleteTransport"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_alignLeft="@+id/btnSaveTransport"
          android:layout_below="@+id/btnSaveTransport"
          android:onClick="btnDeleteTransport_Click"
          android:text="Delete" />
      
</RelativeLayout>
