<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >
    
    <TextView
        android:id="@+id/labItemCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_weight="1"
        android:text="" 
        android:gravity="start"/>

    <TextView
        android:id="@+id/labItemName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/secondary_text_light"
        android:layout_weight="1"
        android:text="" 
        android:gravity="start"/>
    
    <TextView
        android:id="@+id/labItemSpecification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/secondary_text_light"
        android:layout_weight="1"
        android:text=""
        android:gravity="start"/>  
        
     <TextView
        android:id="@+id/labTypeName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/secondary_text_light"
        android:layout_weight="1"
        android:text=""
        android:gravity="start"/>  
        
    <TextView
        android:id="@+id/labItemDateCreated"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_weight="1"
        android:text="" 
        android:gravity="start"/>
            
    <TextView
        android:id="@+id/labCenterName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_weight="1"
        android:text="" 
        android:gravity="start"/>

    <TextView
        android:id="@+id/labSalleName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_weight="1"
        android:text="" 
        android:gravity="start"/>

    <TextView
        android:id="@+id/labPersonnelName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/secondary_text_light"
        android:layout_weight="1"
        android:text="" 
        android:gravity="start"/>
    
        
</LinearLayout>
